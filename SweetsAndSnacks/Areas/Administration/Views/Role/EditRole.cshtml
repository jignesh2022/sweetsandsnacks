@using SweetsAndSnacks.Areas.Administration.Models
@using Microsoft.AspNetCore.Identity;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model EditRoleViewModel


@{
    ViewBag.Title = "Edit Role";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-8"><h1>Edit Role</h1></div>
</div>
<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" class="mt-3">
            <div class=" bg-light border border-3 p-2 mb-3">
                <div class="form-group mb-3">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <input asp-for="Id" disabled class="form-control">                
                </div>
                <div class="form-group mb-3">
                    <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                    <input asp-for="RoleName" class="form-control">
                    <span asp-validation-for="RoleName" class="text-danger"></span>                
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
            

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>Users in this role</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="EditUsersInRole" asp-controller="Role" asp-route-roleID="@Model.Id"
                       class="btn btn-primary" style="width:auto">Add or remove users from this role</a>
                </div>
            </div>
        </form>
    </div>
</div>