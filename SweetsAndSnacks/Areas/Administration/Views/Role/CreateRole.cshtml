@using SweetsAndSnacks.Areas.Administration.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model CreateRoleViewModel

@{
    ViewData["Title"] = "Create Role | Sweets&Snacks";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-md-12"><h1>Create Role</h1></div>
</div>

<div class="row bg-light border border-2">
    <div class="col-md-12">
        <form asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group mb-3">
                <input asp-for="RoleName" class="form-control" placeholder="Enter Role Name">
                <span asp-validation-for="RoleName" class="text-danger"></span>                
            </div>

            <div class="form-group mb-3">                
                    <button type="submit" class="btn btn-primary" style="width:auto">
                        Create Role
                    </button>                
            </div>
        </form>
    </div>
</div>
